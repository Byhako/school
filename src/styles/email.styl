@import 'const.styl'

.containerEmail
  background-color: containerColor
  height: 150px
  padding: 15px
  margin-top: 20px

.title
  color: colorText
  font-size: fontSizeMedium
  
.inputEmail
  display: flex
  margin: auto 0
  padding: 2px 5px
  height: 25px
  border: 1px solid white
  font-size: fontSizeMedium
  background-color: containerColor
  color: white

.error
  height: 25px
  width: 73px
  margin: 0
  z-index: 2
  position: absolute
  right: 25.9%
  top: 52px
  color: black
  background-color: errorColor
  font-size: fontSizeBig
  display: none
  justify-content: center
  align-items: center

.showError
  display: flex
  
.errorEmail
  border-color: errorColor
  color: errorColor
  
.btnNext
  position: relative
  height: 25px
  width: 10%
  margin-top: 2%
  font-size: fontSizeBig
  background-color: selectColor
  border: none
  border-radius: 1px
  cursor: pointer

.btnEmail
  float: right
  
/* loader */

.loader,
.loader:after 
  border-radius: 50%
  width: 10em
  height: 10em

.loader 
  margin: 60px auto
  font-size: 10px
  position: relative
  text-indent: -9999em
  border-top: 1.1em solid rgba(73,195,121, 0.2)
  border-right: 1.1em solid rgba(73,195,121, 0.2)
  border-bottom: 1.1em solid rgba(73,195,121, 0.2)
  border-left: 1.1em solid #49c379
  -webkit-transform: translateZ(0)
  -ms-transform: translateZ(0)
  transform: translateZ(0)
  -webkit-animation: load8 1.1s infinite linear
  animation: load8 1.1s infinite linear

@-webkit-keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)
  }
  100% {
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)
  }
}
@keyframes load8 {
  0% {
    -webkit-transform: rotate(0deg)
    transform: rotate(0deg)
  }
  100% {
    -webkit-transform: rotate(360deg)
    transform: rotate(360deg)
  }
}

.col-10
  box-shadow: 0px 2px 10px 1px #131722

